<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.register.RegisterActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:elevation="0dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#4AA96C"
            app:contentInsetStart="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvwelcome"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/raleway"
        android:text="Siap untuk memahami dunia jamur? Daftarkan diri Anda sekarang!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck" />

    <EditText
        android:id="@+id/username"
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button"
        android:padding="15dp"
        android:hint="Name"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvwelcome"
        tools:ignore="Autofill,HardcodedText,SpeakableTextPresentCheck,TextFields" />

    <EditText
        android:id="@+id/email"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:hint="Email address"
        android:padding="15dp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        tools:ignore="Autofill,HardcodedText,SpeakableTextPresentCheck,TextFields" />

    <EditText
        android:id="@+id/password"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:hint="password"
        android:padding="15dp"
        app:cornerRadius="25dp"
        android:inputType="textPassword"
        app:passwordToggleEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:ignore="Autofill,HardcodedText,SpeakableTextPresentCheck,TextFields" />

    <Button
        android:id="@+id/btnregister"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="@color/sea_green"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.164"
        tools:ignore="HardcodedText,MissingConstraints,DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintButtonSize" />

    <TextView
        android:id="@+id/btnMasuk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:text="Sudah punya akun?"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnregister"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/btnMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toEndOf="@+id/btnMasuk1"
        app:layout_constraintTop_toBottomOf="@+id/btnregister"
        tools:ignore="HardcodedText,MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>